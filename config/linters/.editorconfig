[*.{kt,kts}]
# https://github.com/pinterest/ktlint#editorconfig

# For ktlint 1.0+, use the new format for disabling rules
ktlint_standard_max-line-length = disabled

# Don't disable indent rule as other rules depend on it
# Instead, set indent_size to your preference
indent_size=4

# true (recommended) / false
insert_final_newline=true

# possible values: number (e.g. 120) (package name, imports & comments are ignored), "off"
# it's automatically set to 100 on `ktlint --android ...` (per Android Kotlin Style Guide)
max_line_length=off

# these options can keep to use single name import
ij_kotlin_name_count_to_use_star_import = 2147483647
ij_kotlin_name_count_to_use_star_import_for_members = 2147483647