{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": [
        "**/*.mjs",
        "**/*.cjs",
        "**/*.js"
      ]
    }
  ],
  "rules": {
    "no-console": "off",         // Allow console logs in AWS Lambda
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Ignore unused variables prefixed with "_"
    "no-undef": "off",           // Disable "undefined variable" warnings (optional)
    "strict": ["error", "global"] // Ensure strict mode for better error handling
  }
}
